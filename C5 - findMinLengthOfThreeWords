/*Instructions from your teacher:
Write a function called "findMinLengthOfThreeWords".

Given 3 words, "findMinLengthOfThreeWords" returns the length of the shortest word.

Copy and paste this outside the function to test it.

var output = findMinLengthOfThreeWords('a', 'be', 'see');
console.log(output); // --> 1
*/

function findMinLengthOfThreeWords(word1, word2, word3) {
  // your code here
  var length_of_word1 = word1.length;
  var length_of_word2 = word2.length;
  var length_of_word3 = word3.length;
  
  if (length_of_word1 < length_of_word2 && length_of_word3){
  return length_of_word1;
  
  }else if (length_of_word2 < length_of_word1 && length_of_word3){
  return length_of_word2;
  
  }else if (length_of_word3 < length_of_word1 && length_of_word_2){
  return length_of_word3;
  
  }else{
  return false;
  }
  
}
